# Firebase Configuration (Required)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Environment
VITE_ENVIRONMENT=development

# AI Services (Required for AI features)
VITE_GROQ_API_KEY=your_groq_api_key
# VITE_OPENAI_API_KEY=your_openai_api_key (Optional alternative)

# Analytics (Optional - Free alternatives available)
VITE_ANALYTICS_ENABLED=false
# VITE_POSTHOG_KEY=your_posthog_key (Optional)

# Monitoring (Optional - Free alternatives available)
# VITE_SENTRY_DSN=your_sentry_dsn (Optional)

# Feature Flags
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_AI_JUDGING=true
VITE_ENABLE_ACHIEVEMENTS=true
VITE_ENABLE_SKILL_TREE=true

# Security
VITE_RATE_LIMIT_ENABLED=true
VITE_SESSION_TIMEOUT=3600000

# Performance
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Skill Tree Configuration
VITE_MAX_SKILL_ATTEMPTS=3
VITE_SKILL_MASTERY_THRESHOLD=80
VITE_XP_PER_SKILL_COMPLETION=50

# Debate Configuration
VITE_MAX_DEBATE_DURATION=1800
VITE_MAX_SPEECH_DURATION=300
VITE_AI_RESPONSE_DELAY=2000

# File Upload (Optional)
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/wav,audio/mp3